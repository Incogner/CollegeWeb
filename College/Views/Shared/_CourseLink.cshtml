@model Course
@{
    Layout = null;
}


<form asp-controller="Course" asp-action="DataPage" method="post">
    <input type="hidden" asp-for="CourseCode" />
    <input type="hidden" asp-for="CourseId" />
    <input type="hidden" asp-for="CourseName" />
    <input type="hidden" asp-for="Semester" />
    <input type="hidden" asp-for="CourseFee" />
    <input type="hidden" asp-for="NoOfCredit" />
    <input type="hidden" asp-for="FacultyName" />
    <input type="hidden" asp-for="CourseDesc" />

    <button type="submit">
        <table id="list">
            <tbody>
                <tr>
                    <td id="medium">@Model.CourseCode</td>
                    <td id="longer">| @Model.CourseName</td>
                    <td id="long">| @Model.Semester</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </button>

    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
    {
        <a asp-action="AddCourse" asp-controller="Cart" asp-route-courseId="@Model.CourseId" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()" id="enroll">Enroll</a>
    }

</form>
